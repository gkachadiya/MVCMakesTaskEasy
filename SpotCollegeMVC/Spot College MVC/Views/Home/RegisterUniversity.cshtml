@using SpotCollege.Common

@model SpotCollege.DAL.DataModels.UniversityRegistrationModel
@{
    Layout = null;
    ViewBag.Title = "Welcome to Spot College :: University Registration";
}


<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head id="Head1">
    <title>@ViewBag.Title</title>
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-responsive.css" rel="stylesheet" type="text/css" />

    <!--[if IE]>
        <link rel="stylesheet" href="../Content/ie.css" type="text/css" media="screen" />
    <![endif]-->

    <!--[if gte IE 8]>
        <link rel="stylesheet" href="~/Content/ie8.css" type="text/css" media="screen" />
        <link rel="stylesheet" href="~/Scripts/js/IE8.js" type="text/css" media="screen" />
    <![endif]-->

    <script type="text/javascript" src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/mask.js" type="text/javascript"></script>

    <script type="text/javascript">
        jQuery(document).ready(function ($) {

            /* prepend menu icon */
            $('#nav-wrap').prepend('<div id="menu-icon">Menu</div>');

            /* toggle nav */
            $("#menu-icon").on("click", function () {
                $("#nav").slideToggle();
                $(this).toggleClass("active");
            });

        });
    </script>
    <script type="text/javascript">

        //Right Click Disable
        $(document).ready(function () {
            $(document).bind("contextmenu", function (e) {
                return false;
            });
        });
    </script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="bottombg">
        <div class="bottomgreenbg">
            <div class="header">
                <div class="container">
                    <div class="row">
                        <div class="span3">
                            <a href="/" class="logo">
                                <img src="../Images/d_logo.png" alt="" /></a>
                        </div>
                        <div class="span8">
                            <nav id="nav-wrap">
                                <ul class="navigation" id="nav">
                                    <li class="navi_active"><a href="#">Create University account</a></li>
                                </ul>
                            </nav>
                        </div>
                        <div class="span1">
                            <ul class="login_logoutbtn">
                                <li><a href="/">Login</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            @{
                HtmlHelper.ClientValidationEnabled = true;
                HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
            }
            @using (Html.BeginForm())
            {
                
                <div class="content">
                    <div class="container">
                        <div class="row">
                            <div class="span3"></div>
                            <div class="span6">
                                <div class="pattern_box university_accountbox box_space">
                                    <h1>To join our portal, kindly fill up this form and our representative will get in touch with you soon</h1>
                                    <ul class="university_account_list">
                                        <li>
                                            <label>University Name</label>
                                            @Html.TextBoxFor(m => m.UniversityName)
                                            @Html.ValidationMessageFor(m => m.UniversityName)
                                        </li>
                                        <li>
                                            <label>University Address</label>
                                            @Html.TextBoxFor(m => m.Address)
                                            @Html.ValidationMessageFor(m => m.Address)
                                        </li>
                                        <li>
                                            <label>University City</label>
                                            @Html.TextBoxFor(m => m.City)
                                            @Html.ValidationMessageFor(m => m.City)</li>

                                        <li>
                                            <label>Country</label>
                                            @Html.DropDownListFor(m => m.Country, DropDownHelper.getCountry("0"))
                                            @Html.ValidationMessageFor(m => m.Country)
                                        </li>

                                        <li>
                                            <label>Name of Authorized Person</label>
                                            @Html.TextBoxFor(m => m.AdminName)
                                            @Html.ValidationMessageFor(m => m.AdminName)
                                        </li>
                                        <li>
                                            <label>Country Code</label>
                                            @Html.DropDownListFor(m => m.CountryCode, DropDownHelper.getCountryCode("0"))
                                            @Html.ValidationMessageFor(m => m.CountryCode)

                                        </li>
                                        <li>
                                            <label>University Contact no.</label>
                                            @Html.TextBoxFor(m => m.ContactNo)
                                            @Html.ValidationMessageFor(m => m.ContactNo)
                                        </li>
                                        <li>
                                            <label>Email</label>
                                            @Html.TextBoxFor(m => m.UserName)
                                            @Html.ValidationMessageFor(m => m.UserName)
                                            <span id="duplicateUser" style="display: none; color: red">Email already exist in Record. Please Choose Any other..!</span>
                                            @Html.ValidationSummary(true)
                                        </li>
                                        <li>
                                            <label></label>
                                            <input type="submit" id="btnUniReg" name="UniversityReg" value="Submit Application" class="button" />
                                        </li>
                                        <li>
                                            <span id="lblMsg" style="color: green">@ViewBag.lblMsg</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="span3"></div>
                        </div>
                    </div>
                </div>
            }

            <div class="d_footer">
                <div class="container">
                    <div class="row">
                        <div class="span9">
                            <ul class="d_footer_toplink">
                                <li><a href="/">Home</a></li>
                                <li><a href="/Home/Aboutus">About Us</a></li>
                                <li><a href="/Home/PrivacyAndPolicy">Privacy Policy</a></li>
                                <li><a href="/Home/TermToUse">Terms of Use</a></li>
                                <li><a href="/Home/Careers">Careers</a></li>
                            </ul>
                        </div>
                        <div class="span3"><span class="d_footer_righttext">© 2013, Spot College.com, LLC</span></div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>
<script>
    jQuery(function ($) {
        $("#@Html.IdFor(m => m.ContactNo)").mask("(999) 999-9999");
    });

    $(function () {
        $("#@Html.IdFor(m => m.UserName)").change(function () {
            if ($("#@Html.IdFor(m => m.UserName)").val() != "") {
                var User = {
                    UserName: $('#@Html.IdFor(m => m.UserName)').val(),
                };
                $.ajax({
                    type: "POST",
                    url: "/Home/_ValidateUser",
                    data: JSON.stringify(User),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (msg) {
                        if (msg == "false") {
                            $('#btnUniReg').show();
                            $('#duplicateUser').hide();
                        }
                        else {
                            $('#duplicateUser').show();
                        }
                    }
                });
            }
        });
    });
</script>

